<topology name="myTopology">
		
	<property name="property1" default="value1"/>
	<property name="property2" />
	<property name="property3" />
	<property name="property4" default="value2"/>
	
  	<task name="task1" exec="app1 -l -n" env="env1">
		<property name="property1"/>
		<property name="property4"/>
	</task>
	<task name="task2" exec="app2">
		<property name="property1"/>
		<property name="property2"/>
	</task>
	<task name="task3" exec="app3">
		<property name="property2"/>
		<property name="property3"/>
	</task>
	<task name="task4" exec="app4">
		<property name="property3"/>
		<property name="property4"/>
	</task>
	<task name="task5" exec="app5">
		<property name="property1"/>
	</task>

  	<collection name="collection1">
   		<task name="task1"/>
		<task name="task2"/>
		<task name="task2"/>
		<task name="task3"/>
  	</collection>
	
  	<collection name="collection2">
   		<task name="task4"/>
		<task name="task4"/>
		<task name="task5"/>
  	</collection>
	
	<main name="main" n="1">
	    <task name="task1"/>
	    <collection name="collection1"/>
		<group name="group1" n="10">
			<task name="task1"/>
			<collection name="collection1"/>
			<collection name="collection2"/>
		</group>
		<group name="group2" n="15">
			<task name="task3"/>
			<task name="task4"/>
			<collection name="collection1"/>
			<collection name="collection2"/>
		</group>
	</main>
	
</topology>
