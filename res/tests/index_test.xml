<topology id="myTopology">
	
	<property id="TestKey" />
	
  	<decltask id="TestTask0">
		<exe reachable="false">$DDS_LOCATION/tests/task-test_index --type 0 --taskIndex %taskIndex% --collectionIndex %collectionIndex%</exe>
		<properties>
			<id access="write">TestKey</id>
		</properties>
	</decltask>
	
  	<decltask id="TestTask1">
		<exe reachable="false">$DDS_LOCATION/tests/task-test_index --type 1 --taskIndex %taskIndex% --collectionIndex %collectionIndex%</exe>
		<properties>
			<id access="read">TestKey</id>
		</properties>
	</decltask>
	
  	<decltask id="TestTask2">
		<exe reachable="false">$DDS_LOCATION/tests/task-test_index --type 2 --taskIndex %taskIndex% --collectionIndex %collectionIndex%</exe>
		<properties>
			<id access="read">TestKey</id>
		</properties>
	</decltask>
	
	<declcollection id="CollectionTask">
		<tasks>
			<id>TestTask1</id>
		</tasks>
	</declcollection>
	
	<main id="main">
		<task>TestTask0</task>
		<collection>CollectionTask</collection>
		<group id="group1" n="2">
            <task>TestTask2</task>
			<collection>CollectionTask</collection>
		</group>
	</main>
	
</topology>
